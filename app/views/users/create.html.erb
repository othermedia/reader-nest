<h2>Sign up</h2>

<%= error_messages_for :user %>

<% form_for(:user, :action => 'signup') do |f| %>
  <div class="form-row">
    <%= f.label :username %>   <%= f.text_field :username %>
  </div>
  <div class="form-row">
    <%= f.label :password %>   <%= f.password_field :password %>
  </div>
  <div class="form-row">
    <%= f.submit 'Sign up' %>
  </div>
<% end %>

